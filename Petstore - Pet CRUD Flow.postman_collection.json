{
	"info": {
		"_postman_id": "8f1be2d5-9da0-4452-a3a3-85bc4926c195",
		"name": "Petstore - Pet CRUD Flow",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "24329090"
	},
	"item": [
		{
			"name": "Create Pet",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('petId', Math.floor(Math.random() * 100000));",
							"pm.environment.set('petName', 'Pet_' + pm.variables.replaceIn('{{$randomWord}}'));"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 200', () => pm.response.code === 200);",
							"pm.test('Pet ID is correct', () => pm.response.json().id === pm.environment.get('petId'));"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"id\": {{petId}},\n  \"name\": \"{{petName}}\",\n  \"status\": \"available\"\n}"
				},
				"url": {
					"raw": "{{baseURL}}/pet",
					"host": [
						"{{baseURL}}"
					],
					"path": [
						"pet"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Pet",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 200', () => pm.response.code === 200);",
							"pm.test('Pet name is correct', () => pm.response.json().name === pm.environment.get('petName'));"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
